generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User{
  id_user    Int           @id @default(autoincrement())
  name       String
  email      String
  password   String
  datecreate DateTime       @default(now())
  dateupdate DateTime       @updatedAt
  favorites  Favorite[]
}
model Favorite{
  id_favorite    Int        @id @default(autoincrement())
  text           String
  author         String
  user           User       @relation(fields: [userId], references: [id_user])
  userId         Int
}


